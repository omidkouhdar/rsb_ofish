@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<IdentityUser> SigninManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">

    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Them/img/favicon.ico">
    <title>سامانه نظارت بر تردد ارباب و رجوع</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Them/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Them/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Them/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
        
    <link href="~/Them/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Them/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Them/css/style.css" rel="stylesheet">
    <link href="~/Them/css/style-responsive.css" rel="stylesheet" />
    @RenderSection("Styles", false)
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->

            <a href="/" class="logo">
                معاونت حراست <span>شرکت راهبری صنایع بهساز</span>
                <br />
                سامانه نظارت بر تردد ارباب و رجوع
            </a>

            <!--logo end-->
            <div class="nav notify-row" id="top_menu">

                <!--  notification end -->
            </div>
            <div class="top-nav ">

            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->

                <ul class="sidebar-menu">

                    @if (!SigninManager.IsSignedIn(User))
                    {

                        <li>
                            <a class="" href="@Url.Action("Login" , "Auth")">
                                <i class="glyphicon glyphicon-log-out"></i>
                                <span>ورود به سیستم</span>
                            </a>
                        </li>

                    }
                    else
                    {
                        <hr/>
                        <li>
                            <a class="" href="@Url.Action("resetPassword" , "Auth")">
                                <i class="icon-exchange"></i>
                                <span>تعویض رمز عبور</span>
                            </a>
                        </li>
                        <hr />
                        <li>
                            @{
                                string img = @CommonTools.Tools.GetUserId(User) + ".jpg";
                            }
                            <img src='~/Them/img/@img' class="img-circle" />
                            <h3 class="text-center" style="color:aliceblue">
                                <span>نگهبان</span> @User.FindFirst("FullName").Value
                            </h3>

                        </li>
                        <li>
                            <form id="signoutform" asp-action="SignOut" asp-controller="Auth" role="form" method="post">
                                <button class="btn btn-danger" type="submit">
                                    <span>خروج</span>
                                    <i class="glyphicon glyphicon-log-out "></i>

                                </button>
                            </form>
                        </li>


                    }







                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <div class=" text-center ajax-loader">
            <img src="~/Them/img/Geduld.gif" />
        </div>

        <section id="main-content">
            <section class="wrapper">
                <br />
                @RenderBody()
            </section>
        </section>


        <!--main content end-->
    </section>

    <!-- Modal -->
    <div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">
                        <i class="icon-folder-close"></i> </span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body" id="myModalBody">

                </div>
            </div>
        </div>
    </div>
    <!--End Modal -->
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Them/js/jquery.js"></script>
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Them/js/bootstrap.min_3.3.5.js"></script>
    <script src="~/Them/js/jquery.scrollTo.min.js"></script>
    <script src="~/Them/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Them/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/Them/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/Them/js/owl.carousel.js"></script>
    <script src="~/Them/js/jquery.customSelect.min.js"></script>
    <script src="~/Them/assets/jquery-knob/js/jquery.knob.js"></script>
    <script src="~/Them/assets/morris.js-0.4.3/morris.min.js" type="text/javascript"></script>
    <script src="~/Them/assets/morris.js-0.4.3/raphael-min.js" type="text/javascript"></script>
    <!--common script for all pages-->
    <script src="~/Them/js/common-scripts.js"></script>
    <!--script for this page-->
    <script src="~/Them/js/sparkline-chart.js"></script>
    <script src="~/Them/js/easy-pie-chart.js"></script>
    <script src="~/Them/assets/GaugeMeter.js"></script>
    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true

            });
            $('.GaugeMeter').gaugeMeter();
        });


    </script>
    <script>
        $.ajaxSetup({
            beforeSend: function () {
                $(".ajax-loader").css("display", "block");
            },
            complete: function () {
                $(".ajax-loader").css("display", "none");
            }
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
